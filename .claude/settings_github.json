{
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "mcp__code_tools",
      "mcp__ui_code_tools",
      "mcp__context7",
      "mcp__playwright",
      "Read(./**)"
    ],
    "deny": ["Read(*.env)", "Read(*.env.*)", "Read(*/.configs/**)"],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PROJECT_DIR}/.claude/hooks/scripts/stop-ralph-hook.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PROJECT_DIR}/.claude/hooks/scripts/auto-commit-push.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "./.claude/statusline.sh",
    "padding": 0
  }
}
