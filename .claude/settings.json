{
  "enabledMcpjsonServers": ["code_tools"],
  "enableAllProjectMcpServers": true,

  "permissions": {
    "allow": ["mcp__code_tools", "mcp__ui_code_tools", "Read(./**)"],
    "deny": ["Read(*.env)", "Read(*.env.*)", "Read(*/.configs/**)"]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/fix_ralph.sh"
          }
        ]
      }
    ]
  }
}
